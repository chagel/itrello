{
  "description": "Customize Trello appearence with minimal settings.",
  "manifest_version": 2,
  "name": "iTrello",
  "version": "1.2",
  "icons": {
    "48": "icons/app.png"
  },

  "author": "MGC",
  "homepage_url": "https://github.com/chagel/itrello",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },

  "page_action": {
    "default_icon": "icons/app.png",
    "browser_style": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "applications": {
    "gecko": {
      "id": "itrello@developer.mozilla.org"
    }
  }
}
